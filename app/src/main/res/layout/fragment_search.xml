<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_screen.search_Fragment">

<EditText
    android:id="@+id/search_page_search"
    android:layout_width="@dimen/_325sdp"
    android:layout_height="@dimen/_44sdp"
    android:background="@drawable/custom_edit_shape"
    android:backgroundTint="#A1B392F9"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_17sdp"
    android:hint="Domestic"
    android:textSize="@dimen/_18sdp"
    android:fontFamily="@font/roboto"
    android:singleLine="true"
    android:paddingStart="@dimen/_10sdp"
    android:textColorHint="@color/black"
    android:textColor="@color/black"
    android:text="Domestic"
    android:drawableEnd="@drawable/baseline_search_24"
    android:paddingEnd="@dimen/_7sdp"
    />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_page_search"
        tools:listitem="@layout/search_product_recycle"
        android:layout_marginTop="@dimen/_5sdp"
        />




</RelativeLayout>